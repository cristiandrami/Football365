<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/single_match_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:minHeight="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey"

            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/background_color"/>

        <TextView
            android:id="@+id/single_match_current_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="LIVE"
            android:textColor="@color/text_color"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.47"></TextView>

        <TextView
            android:id="@+id/single_match_home_team"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:text="first team"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:autoSizeTextType="uniform"
            android:textColor="@color/text_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/single_match_status"
            app:layout_constraintStart_toEndOf="@id/single_match_current_time"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/single_match_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/bungee_regular"
            android:text="vs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="@+id/single_match_current_time"
            android:textColor="@color/text_color"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/single_match_away_team"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="second team"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/text_color"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintEnd_toStartOf="@+id/single_match_current_time_padding"
            app:layout_constraintStart_toEndOf="@id/single_match_status"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.47"></TextView>

        <TextView
            android:id="@+id/single_match_current_time_padding"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:text="TIME"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            app:layout_constraintVertical_bias="0.47"></TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>