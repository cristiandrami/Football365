<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="400dp"
   android:layout_gravity="center"
    android:background="@drawable/profile_update_popup_background_shape">

    <ImageView
        android:id="@+id/profile_update_popup_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_sports_soccer_24"></ImageView>


    <TextView
        android:id="@+id/profile_update_popup_confirmation_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_regular"
        android:text="@string/update_confirmation"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_below="@+id/profile_update_popup_image"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"></TextView>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/old_password_field_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="@color/black"
        android:hint="@string/old_password_hint"
        android:layout_below="@+id/profile_update_popup_confirmation_text_view"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/old_password_field_edit_text_profile_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/confirmation_update_profile_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update_confirmation_button_text"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:background="@color/black"
        android:elevation="0dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/old_password_field_layout"
        android:layout_marginTop="10dp"
        ></Button>

</RelativeLayout>