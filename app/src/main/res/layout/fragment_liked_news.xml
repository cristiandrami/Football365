<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.news.NewsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/no_liked_news_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/sad_face_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"
            ></ImageView>

        <TextView
            android:id="@+id/no_liked_news_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee_regular"
            android:text="@string/no_liked_news"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/no_liked_news_icon"
            app:autoSizeTextType="uniform"
            app:layout_constraintVertical_bias="0.0"
            android:visibility="invisible"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container_news_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shimmer_direction="left_to_right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/news_recycler_view_item_layout_shimmer"></include>

            <include layout="@layout/news_recycler_view_item_layout_shimmer"></include>

            <include layout="@layout/news_recycler_view_item_layout_shimmer"></include>

            <include layout="@layout/news_recycler_view_item_layout_shimmer"></include>

            <include layout="@layout/news_recycler_view_item_layout_shimmer"></include>

            <include layout="@layout/news_recycler_view_item_layout_shimmer"></include>

            <include layout="@layout/news_recycler_view_item_layout_shimmer"></include>

            <include layout="@layout/news_recycler_view_item_layout_shimmer"></include>


        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/liked_news_recycler_view_in_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>


</FrameLayout>